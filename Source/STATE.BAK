          %IFNDEF $StateVARIO
 
$StateVARIO                      EQUATE         1
.
#result   FORM       1
#Operand  DIM        40
#ErrorString  DIM        120
.
.
.
          GOTO       #EndOfRoutine
.
.
.
. Test Read for StateRECKY Index
.
TSTState                                    
          MOVE       "Testing",#Operand
          READ       StateFL,StateRECKY;;
          GOTO       #ERROR IF OVER
          GOTO       #VALID
.
. Random Read for StateRECKY Index
.
RDState                                     
          MOVE       "Reading",#Operand
          READ       StateFL,StateRECKY;State
          GOTO       #ERROR IF OVER
          GOTO       #VALID
.
. Random Locked Read for StateRECKY Index
.
RDStateLK                                   
          MOVE       "Reading",#Operand
          READLK     StateFL,StateRECKY;State
          GOTO       #LOCKED IF LESS
          GOTO       #ERROR IF OVER
          GOTO       #VALID
.
. Key Sequential Read for StateRECKY Index
.
KSState                                     
          MOVE       "Reading Key Sequentially",#Operand
          READKS     StateFL;State
          GOTO       #ERROR IF OVER
          GOTO       #VALID
.
. Key Locked Sequential Read for StateRECKY Index
.
KSStateLK                                   
          MOVE       "Reading Key Sequentially",#Operand
          READKSLK   StateFL;State
          GOTO       #LOCKED IF LESS
          GOTO       #ERROR IF OVER
          GOTO       #VALID
.
. Key Previous Read for StateRECKY Index
.
KPState                                     
          MOVE       "Reading Key Previously",#Operand
          READKP     StateFL;State
          GOTO       #ERROR IF OVER
          GOTO       #VALID
.
. Key Locked Previous Read for StateRECKY Index
.
KPStateLK                                   
          MOVE       "Reading Key Previously",#Operand
          READKPLK   StateFL;State
          GOTO       #LOCKED IF LESS
          GOTO       #ERROR IF OVER
          GOTO       #VALID
.
. Update of State Record
.
UpdState                                    
          MOVE       "Updating",#Operand
          UPDATE     StateFLST;State
          GOTO       #VALID
.
. Deletion of State Record
.
DelState                                    
          MOVE       "Deleting",#Operand
          DELETE     StateFLST
          GOTO       #VALID
.
. Write for State Record
.
WrtState                                    
          MOVE       "Writing",#Operand
          WRITE      StateFLST;State
          GOTO       #VALID
.
.  Opening of State Files
.
OpenState                                   
          GETFILE          StateFL
          RETURN           IF ZERO             //Nothing to do, the file is already open
          MOVE       "Opening",#Operand
          OPEN             StateFLST,LockManual,Single,NoWait
          RETURN
.
.  Opening of State Files in Read-Only Mode
.
OpenStateRO                                 
          GETFILE          StateFl
          RETURN           IF ZERO             //Nothing to do, the file is already open
          MOVE       "Opening",#Operand
          OPEN             StateFLST,READ
          RETURN
.
.  Opening of State Files in Read-Only Mode
.
OpenStateEx                                 
          GETFILE          StateFl
          RETURN           IF ZERO             //Nothing to do, the file is already open
          MOVE       "Opening",#Operand
          OPEN             StateFLST,Exclusive
          RETURN
.
.  Preparing of State Files
.
PrepState                                   
           PREPARE       StateFL,"States.txt","StateREC.isi","-n,z,y,1-2","27",EXCLUSIVE
           RETURN
.
. Standard Return Values for I/O Include
.
#ERROR
          MOVE       "1" TO ReturnFl    
          MOVE       "Preparing",#Operand
          RETURN
#LOCKED
          MOVE       "2" TO ReturnFl    
          RETURN
#VALID
          MOVE       "0" TO ReturnFl    
          RETURN
 
 
#StateError
          PACK        #ErrorString from "Error ",#Operand," State FileActual Error : ",S$ERROR$
          BEEP
          ALERT       STOP,#ErrorString,result,"I/O Error"
          STOP
 
 
#EndOfRoutine
          %ENDIF          //End of IO Include File
