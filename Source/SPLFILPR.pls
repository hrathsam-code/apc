.
.
         CREATE    DBOX,DBDATA
.
LSTSEL
         ACTIVATE  DBOX,GETOPT,RESULT
         LOOP
           WAITEVENT
         REPEAT
         STOP
.
GETOPT   COMPARE   "1" TO RESULT
         GOTO      GETPRT IF EQUAL
         COMPARE   "3" TO RESULT
         GOTO      GETPRT IF EQUAL
         COMPARE   "4" TO RESULT
         GOTO      GETPRT IF EQUAL
         COMPARE   "6" TO RESULT
         GOTO      GOTPRT IF EQUAL
         RETURN
.
GETPRT
         GETITEM   DBOX,1,0,PRESULT
         GETITEM   DBOX,1,PRESULT,PRTNAME
         GETITEM   DBOX,3,0,PRESULT
         GETITEM   DBOX,3,PRESULT,LOCPRT
         GETITEM   DBOX,4,0,FRESULT
         GETITEM   DBOX,4,FRESULT,FILPRT
         SETITEM   DBOX,5,0,PRTNAME
         RETURN
.
NULSPL   RESET     PRTNAME
         GOTO      LSTSEL
.
CHKLEN   RESET     PRTNAME
         MOVELPTR  PRTNAME TO NWK2
         SFORMAT   DEVNAME TO NWK2
         GOTO      MVPTNAM
.
GOTPRT
         COMPARE   "1" TO LOCPRT
         GOTO      PRTLPT1 IF EQUAL
         COMPARE   "1" TO FILPRT
         GOTO      PRTFIL1 IF EQUAL
         RESET     PRTNAME
         SCAN      " on " IN PRTNAME
         GOTO      NULSPL IF EOS
         GOTO      CHKLEN IF NOT EQUAL
         BUMP      PRTNAME BY -1
         MOVEFPTR  PRTNAME TO NWK2
         SFORMAT   DEVNAME TO NWK2
         LENSET    PRTNAME
         RESET     PRTNAME
MVPTNAM  MOVE      PRTNAME TO DEVNAME
         RESET     DEVNAME
         SPLOPEN   DEVNAME,"R"              //HR 2/10/03
         GOTO      XITSEL
.
PRTFIL1  PACKKEY   SPLFILNM WITH PROGNTXT,PRTEXT
         SPLOPEN   SPLFILNM
         GOTO      XITSEL
.
PRTLPT1
XITSEL   DEACTIVATE DBOX
         NORETURN
