                    include            workvar.inc
                    include            ARTRN.FD

InputCounter        form               7
InputFile           file

                    call               OpenARTRN

                    packkey            ARTRNKY4 from $Entity,"O"
                    call               RDARTRN4

                    loop
                      call               KSARTrn4
                    until              (ReturnFl = 1 )
                    continue           if (ARTrn.ClosedFlag = "C")
                      add                "1",InputCounter
                      display            *P10:10,"Input Counter : ",InputCounter
                      squeeze            ARTrn.CustomerPO,ARTrn.CustomerPO

                      if                 (ARTrn.CustomerID = "3556  " or ARTRN.CustomerID = "5552  " or ARTRN.CustomerID = "8357  " or:
                                          (ARTrn.CustomerID = "1077  " and ARTrn.CustomerPO = "1814221")
                        call               DelARTrn
                      endif

                    repeat
