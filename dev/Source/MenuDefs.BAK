             RETURN

         %IF PDECLARED(MainFirst) == 4
           WHEN              "50"
             CALL              MainFirst
             RETURN
         %endif

         %IF PDECLARED(MainPrevious) == 4
           WHEN              "51"
             CALL              MainPrevious
             RETURN
         %endif

         %IF PDECLARED(MainFind) == 4
           WHEN              "52"
             CALL              MainFind
             RETURN
         %endif

         %IF PDECLARED(MainNext) == 4
           WHEN              "53"
             CALL              MainNext
             RETURN
         %endif

         %IF PDECLARED(MainLast) == 4
           WHEN              "54"
             CALL              MainLast
             RETURN
         %endif

         %IF PDECLARED(ViewComments) == 4
           WHEN              "71"
             CALL              ViewComments
             RETURN
         %EndIF

