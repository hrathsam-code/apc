             RETURN

         %IF PDECLARED(MainHelpContents) == 4
           WHEN              "41"
             CALL              MainHelpContents
             RETURN
         %EndIF

         %IF PDECLARED(MainHelpSearch) == 4
           WHEN              "42"
             CALL              MainHelpSearch
             RETURN
         %EndIF

         %IF PDECLARED(MainAboutChiron) == 4
