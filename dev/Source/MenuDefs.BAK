GetMenuName
           SELECT            USING MenuTag
         %IF PDECLARED(MainPrint) == 4
           WHEN              "1"
             CALL              MainPrint
             RETURN
         %endif

         %IF PDECLARED(RePrintInvoices) == 4
           WHEN              "81"
             CALL              RePrintInvoices
             RETURN
         %endif

         %IF PDECLARED(PrintStatement) == 4
           WHEN              "82"
             CALL              PrintStatement
             RETURN
         %endif

         %IF PDECLARED(MainPrintPreview) == 4
           WHEN              "2"
             CALL              MainPrintPreview
             RETURN
         %EndIF

           WHEN              "99"
             CALL              MainClose
             RETURN
           WHEN              "20"
             CALL              MainUndo
             RETURN
         %IF PDECLARED(MainNew) == 4
           WHEN              "21"
             CALL              MainNew
             RETURN
         %endif

         %IF PDECLARED(MainDelete) == 4
           WHEN              "22"
             CALL              MainDelete
             RETURN
         %endif

         %IF PDECLARED(MainChange) == 4
           WHEN              "23"
             CALL              MainChange
             RETURN
         %endif

           WHEN              "24"
             CALL              SaveMode
             RETURN
           WHEN              "25"
             CALL              MainCancel
             RETURN
           WHEN              "40"
